[% IF ctx.saved_searches.size %]
    <div class="saved-searches-header big-strong">[% l("Your recent searches:") %]</div>
    [% FOR s IN ctx.saved_searches %]
    <ul>
        <li><a href="[% ctx.opac_root %]/results?query=[% s | uri %]&amp;_adv=1">[% s | html %]</a></li>
    </ul>
    [% END %]
[% END %]
