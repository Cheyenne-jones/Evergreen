	<option value='i'>[% l("Audiobooks") %]</option>
	<option value='g'>[% l("Video Recordings") %]</option>
	<option value='j'>[% l("Music") %]</option>
	<option value='m'>[% l("Electronic Resources") %]</option>
-->
</select>
